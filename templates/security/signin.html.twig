{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="css/login.css">
{% endblock %}
{% block body %}
    <div class="container-login100">
        <div class="wrap-login100">
            <form method="post" class="login100-form login100-validate-form">
                <span class="login100-form-title p-b-26">Welcome</span>
                <span class="login100-form-title p-b-48">
                <i class="zmdi zmdi-font"></i></span>
                <div class="wrap-input100 validate-input" data-validate="Enter Firstname">
                    <label>
                        <input class="input100" type="text" name="firstname" placeholder="Firstname">
                    </label>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter Lastname">
                    <label>
                        <input class="input100" type="text" name="lastname" placeholder="Lastname">
                    </label>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter Mail">
                    <label>
                        <input class="input100" type="text" name="Mail" placeholder="Mail">
                    </label>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter login">
                    <label>
                        <input class="input100" type="text" name="login" placeholder="Login">
                    </label>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Correct password is 6 caracter length">
                <span class="btn-show-pass">
                <i class="zmdi zmdi-eye"></i>
                </span>
                    <label>
                        <input class="input100" type="password" name="pass" placeholder="Password">
                    </label>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Correct password is 6 caracter length">
                <span class="btn-show-pass">
                <i class="zmdi zmdi-eye"></i>
                </span>
                    <label>
                        <input class="input100" type="password" name="pass2" placeholder="Password Verification">
                    </label>
                </div>
                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                           Inscription
                        </button>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>
        </div>
    </div>
{% endblock %}
